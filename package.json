{
  "name": "web-docs-editor",
  "productName": "Web Docs Editor",
  "version": "1.1.0",
  "description": "A modern document editor with version control",
  "main": "electron/main.js",
  "homepage": ".",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "electron-builder",
    "build": "npm run rebuild && electron-builder --win --x64",
    "build-all": "npm run rebuild && electron-builder --win --mac --linux",
    "clean": "rmdir /s /q dist-windows 2>nul || true",
    "dist": "npm run build",
    "postinstall": "electron-builder install-app-deps",
    "electron-rebuild": "npx electron-rebuild",
    "rebuild": "npx electron-rebuild",
    "test": "jest"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "better-sqlite3-multiple-ciphers": "^12.2.0",
    "cors": "^2.8.5",
    "diff": "^8.0.2",
    "dotenv": "^16.6.1",
    "electron-store": "^10.1.0",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "pdf-lib": "^1.17.1",
    "pg": "^8.16.3",
    "together-ai": "^0.20.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "concurrently": "^9.2.0",
    "electron": "^37.2.2",
    "electron-builder": "^26.0.12",
    "jest": "^30.0.4",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.3",
    "wait-on": "^8.0.3"
  },
  "keywords": [
    "document",
    "editor",
    "web",
    "docx",
    "word"
  ],
  "author": "Yash Prakash Narayan",
  "license": "MIT",
  "build": {
    "appId": "com.yashprakash.webdocseditor",
    "productName": "Web Docs Editor",
    "icon": "images/icon.ico",
    "directories": {
      "output": "dist-windows"
    },
    "files": [
      "**/*",
      "images/**/*",
      "!dist-windows/**/*",
      "!dist",
      "!*.gguf",
      "!*.py",
      "!*.md",
      "!build/**/*",
      "!.git/**/*",
      "!.gitignore",
      "!.python-version",
      "!uv.lock",
      "!.venv/**/*",
      "!pyproject.toml",
      "!setup-version-control.sh",
      "!test-packaged-app.bat",
      "!build-app.bat",
      "!electron/run-electron.bat",
      "!.github/**/*",
      "!docs/**/*"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3-multiple-ciphers/**/*"
    ],
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "win": {
      "target": "nsis",
      "icon": "images/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": "dmg",
      "icon": "images/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "images/icon.ico"
    },
    "publish": null
  }
}
