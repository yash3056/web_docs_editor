{
  "name": "web-docs-editor",
  "version": "1.0.0",
  "description": "A web-based document editor with server-side storage",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "pkg . --out-path dist",
    "build:windows": "pkg . --targets node18-win-x64 --out-path dist",
    "build:linux": "pkg . --targets node18-linux-x64 --out-path dist",
    "build:mac": "pkg . --targets node18-macos-x64 --out-path dist",
    "build:mac-arm": "pkg . --targets node18-macos-arm64 --out-path dist",
    "build:all": "npm run build:windows && npm run build:linux && npm run build:mac && npm run build:mac-arm"
  },
  "dependencies": {
    "@google/generative-ai": "^0.7.1",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pdf-lib": "^1.17.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1"
  },
  "keywords": [
    "document",
    "editor",
    "web",
    "docx",
    "word"
  ],
  "author": "Yash Prakash Narayan",
  "license": "MIT",
  "pkg": {
    "assets": [
      "*.html",
      "*.css",
      "*.js",
      "images/**/*"
    ],
    "targets": [
      "node18-win-x64",
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-macos-arm64"
    ],
    "outputPath": "dist"
  }
}
